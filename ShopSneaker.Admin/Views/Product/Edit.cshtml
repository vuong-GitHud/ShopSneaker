@using ShopSneaker.Models;
@model UpdateProductVm

<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head-content">
                    <h3 class="nk-block-title page-title">Create Product</h3>
                </div>
                <form asp-action="Edit" asp-controller="Product" method="post">
                    <input asp-for="Id" hidden/>
                    <div class="nk-block">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label" for="product-title">Product Title</label>
                                    <div class="form-control-wrap">
                                        <input type="text" class="form-control" id="product-title" asp-for="Name">
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-mb-6">
                                <div class="form-group">
                                    <label class="form-label" for="regular-price">Price</label>
                                    <div class="form-control-wrap">
                                        <input type="text" class="form-control" id="regular-price" asp-for="Price">
                                        <span class="text-danger" asp-validation-for="Price"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-mb-6">
                                <div class="form-group">
                                    <label class="form-label" for="sale-price">Description</label>
                                    <div class="form-control-wrap">
                                        <input type="text" class="form-control" id="sale-price" asp-for="Description">
                                        <span class="text-danger" asp-validation-for="Description"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-mb-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="CategoryId">Category</label>
                                    <div class="form-control-wrap">
                                        <select asp-for="CategoryId" class="form-control select2">
                                            <option>Select</option>
                                            <option value="1">Nike</option>
                                            <option value="2">Adidas</option>
                                            <option value="3">Puma</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary">
                                    <span>Save</span>
                                </button>
                            </div>
                            <div class="col-6">
                                <button href="@Url.Action("Index")" class="btn btn-primary">
                                    <span>Back</span>
                                </button>
                            </div>
                        </div>
                    </div><!-- .nk-block -->
                </form>
            </div>
        </div>
    </div>
</div>
