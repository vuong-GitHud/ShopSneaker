@model ShopSneaker.Models.RegisterModel
<main class="bg_gray">
    <div class="container margin_30">
        <!-- /page_header -->
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-6 col-md-8">
                <div class="box_account">
                    <p class="text-bg-danger">@ViewBag.Message</p>
                    <div class="form_container">
                        <form asp-action="Register" method="post">
                            <div class="form-group">
                                <input type="email" class="form-control" asp-for="Email" placeholder="Email*">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" asp-for="Password" value="" placeholder="Password*">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" asp-for="PasswordConfirm" value="" placeholder="Password*">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" asp-for="FullName" placeholder="Fullname">
                            </div>
                            <div class="clearfix add_bottom_15">
                                <div class="float-end">
                                    <a id="forgot" href="@Url.Action("Login")">Login</a>
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" class="btn_1 full-width">
                            </div>
                        </form>
                    </div>
                    <!-- /form_container -->
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</main>